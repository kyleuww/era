    <script>
        // Initialize Lucide icons after DOM loads
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        });

        let highlightMode = false;
        let currentHighlight = 0;

        // Add click to expand functionality
        document.querySelectorAll('.comparison-item').forEach(item => {
            item.addEventListener('click', function(e) {
                // Don't expand if in highlight mode
                if (highlightMode) return;
                
                // Toggle expanded class
                this.classList.toggle('expanded');
                
                // Re-initialize icons
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            });
        });

        function toggleHighlight() {
            highlightMode = !highlightMode;
            const btn = document.querySelector('.toggle-btn');
            const btnText = btn.querySelector('span');
            const container = document.querySelector('.container');
            
            if (highlightMode) {
                btnText.textContent = 'Show All';
                btn.innerHTML = '<i data-lucide="eye" size="20"></i><span>Show All</span>';
                container.classList.add('highlight-mode');
                cycleHighlight();
            } else {
                btnText.textContent = 'Compare Differences';
                btn.innerHTML = '<i data-lucide="target" size="20"></i><span>Compare Differences</span>';
                container.classList.remove('highlight-mode');
                clearHighlights();
            }
            
            // Re-initialize icons after button change
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        function cycleHighlight() {
            if (!highlightMode) return;
            
            clearHighlights();
            currentHighlight = (currentHighlight % 7) + 1;
            
            const items = document.querySelectorAll(`[data-pair="${currentHighlight}"]`);
            items.forEach(item => item.classList.add('highlighted'));
            
            setTimeout(() => cycleHighlight(), 2000);
        }

        function clearHighlights() {
            document.querySelectorAll('.comparison-item').forEach(item => {
                item.classList.remove('highlighted');
            });
        }

        // Add hover pairing effect
        document.querySelectorAll('.comparison-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                if (!highlightMode) {
                    const pairNum = this.getAttribute('data-pair');
                    const pairs = document.querySelectorAll(`[data-pair="${pairNum}"]`);
                    pairs.forEach(p => {
                        if (p.parentElement.classList.contains('legacy')) {
                            p.style.background = '#E6ECF8';
                        } else {
                            p.style.background = '#f0f5ff';
                        }
                    });
                }
            });
            
            item.addEventListener('mouseleave', function() {
                if (!highlightMode) {
                    const pairNum = this.getAttribute('data-pair');
                    const pairs = document.querySelectorAll(`[data-pair="${pairNum}"]`);
                    pairs.forEach(p => p.style.background = '');
                }
            });
        });

        // Ensure icons load after a short delay if needed
        setTimeout(() => {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }, 100);
    </script>
</body>
</html>
